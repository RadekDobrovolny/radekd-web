{% include "partials/_head.njk" %}
<body>
{% include "partials/_navigation.njk" %}
<main>
    <div class="main-container">
        <section class="content-row first">
            <div class="card welcome">
                <h1>{{ welcome.name }}</h1>
                <p>{{ welcome.title }}</p>
                <p>{{ welcome.desc }}</p>
            </div>

            <div class="card profile-photo">
                <h2>{{ welcome.greetings }}</h2>
                <img src="{{ welcome.profile }}" alt="Profile photo of {{ welcome.name }}" loading="eager" fetchpriority="high">
            </div>
        </section>

        <section class="content-row">
            <div class="card tags">
                <h2>Interests</h2>
                <div class="tag-list">
                    {% for category in collections.categories %}
                        {% if category != "post" and category != "portfolio" %}
                        <a href="{{ ('/' + category + '/index.html') | url }}" class="tag">{{ category }}</a>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </section>

        <section class="content-row">
            <div class="card recent">
                <h2>Recent posts</h2>
                <div class="blog-list">
                    {{ content | safe }}
                </div>
            </div>
        </section>
    </div>
</main>
{% include "partials/_footer.njk" %}